{{> pattern-header }}

<div class="mdl-layout__content">
	<div class="layout-fixed-width">
		<h2>Dialogs</h2>

		<button id="show-dialog" class="mdl-button mdl-js-button mdl-button--primary">
			Show Dialog
		</button>
		<dialog class="mdl-dialog">
			<form action="#">
				<div class="mdl-card__media">
					<img src="images/more-from-4.png">
				</div>
				<div class="mdl-card__title">
					<h4 class="mdl-card__title-text">Log In</h4>
				</div>
				<div class="mdl-card__supporting-text">
					<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
						<input class="mdl-textfield__input" type="text" id="uname" />
						<label class="mdl-textfield__label" for="sample1">Username</label>
					</div>
					<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
						<input class="mdl-textfield__input" type="password" id="pass" />
						<label class="mdl-textfield__label" for="sample2">Password</label>
					</div>
				</div>
				<div class="mdl-card__actions">
					<button class="mdl-button mdl-js-button mdl-button--primary close">
						Login
						<i class="material-icons">chevron_right</i>
					</button>
				</div>
			</form>
		</dialog>
		<script>
			var dialog = document.querySelector('dialog');
			var showDialogButton = document.querySelector('#show-dialog');
			if (!dialog.showModal) {
				dialogPolyfill.registerDialog(dialog);
			}
			showDialogButton.addEventListener('click', function() {
				dialog.showModal();
			});
			dialog.querySelector('.close').addEventListener('click', function() {
				dialog.close();
			});
		</script>
	</div>
